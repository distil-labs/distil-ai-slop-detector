{
  "manifest_version": 3,
  "name": "AI Text Detector (Local)",
  "version": "1.0.0",
  "description": "Detect AI-generated text locally using Gemma",
  "permissions": ["storage", "offscreen"],
  "host_permissions": ["https://huggingface.co/*"],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "web_accessible_resources": [{
    "resources": ["wllama/*", "icons/*"],
    "matches": ["<all_urls>"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}